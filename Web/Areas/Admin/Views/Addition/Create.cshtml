@using Core.Constants
@using Web.Areas.Admin.ViewModels.Addition

@model AdditionCreateVM
<div class="main-panel">

    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Menu's Additions
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="create" asp-controller="addition" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="Ingredient">Ingredient Name</label>
                                <input class="form-control" asp-for="Ingredient">
                                <span asp-validation-for="Ingredient"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Ingredient's Price</label>
                                <input class="form-control" asp-for="Price">
                                <span asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId"></label>
                                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories"></select>
                                <span asp-validation-for="CategoryId"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Status"></label>
                                <select asp-for="@Model.Status" asp-items="Html.GetEnumSelectList<ProductStatus>()"></select>
                                <span asp-validation-for="Status"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-danger" asp-action="index" asp-controller="addition"> Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>