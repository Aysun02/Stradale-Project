@using Web.Areas.Admin.ViewModels.WiseExpression
@model WiseExpressionUpdateVM

<form enctype="multipart/form-data" asp-action="update" asp-controller="wiseexpression" method="post">

    <div class="form-group">
        <label asp-for="Text">Text</label>
        <textarea class="form-control" asp-for="Text"></textarea>
        <span asp-validation-for="Text"></span>
    </div>
    <div class="form-group">
        <label asp-for="Author">Author</label>
        <input class="form-control" asp-for="Author">
        <span asp-validation-for="Author"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Update</button>
    <a class="btn btn-danger mt-2" asp-action="index" asp-controller="wiseexpression">Cancel</a>
</form>