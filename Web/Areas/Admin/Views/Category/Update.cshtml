@using Web.Areas.Admin.ViewModels.Category
@model CategoryUpdateVM

<form enctype="multipart/form-data" asp-action="update" asp-controller="category" method="post">

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input class="form-control" asp-for="Title">
        <span asp-validation-for="Title"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Update</button>
    <a class="btn btn-danger mt-2" asp-action="index" asp-controller="category">Cancel</a>
</form>