@using System.Web
@using Web.ViewModels
@model BlogIndexVM


<div class="no-bottom no-top" id="content" style="background-size: cover;">
    <div id="top" style="background-size: cover;"></div>

    <section id="subheader" class="jarallax" style="background-size: cover; z-index: 0;" data-jarallax-original-styles="background-size: cover;">

        <div class="center-y relative text-center" style="background-size: cover;">
            <div class="container" style="background-size: cover;">
                <div class="row" style="background-size: cover;">
                    <div class="col-md-12 text-center" style="background-size: cover;">
                        <h1>Blog</h1>
                    </div>
                </div>
            </div>
        </div>
        <div id="jarallax-container-0" style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%; overflow: hidden; z-index: -100; clip-path: polygon(0px 0px, 100% 0px, 100% 100%, 0px 100%);"><img class="jarallax-img" src="~/images-b/subheader.jpg" alt="" style="object-fit: cover; object-position: 50% 50%; max-width: none; position: absolute; top: 0px; left: 0px; width: 1519.2px; height: 534.4px; overflow: hidden; pointer-events: none; transform-style: preserve-3d; backface-visibility: hidden; will-change: transform, opacity; margin-top: 80.8px; transform: translate3d(0px, -80.8px, 0px);"></div>
    </section>

    <section id="section-main" style="background-size: cover;">
        <div class="container" style="background-size: cover;">
            <div class="row g-4" style="background-size: cover;">

                @foreach(var post in Model.BlogPosts)
                {

                <div class="col-lg-4 col-md-6" style="background-size: cover;">
                    <div class="d-items" style="background-size: cover;">
                        <div class="card-image-1 mod-b" style="background-size: cover;">
                            <a asp-action="index" asp-controller="blog" class="d-text">
                                <div class="d-inner" style="background-size: cover;">
                                    <span class="atr-date">@post.Date</span>
                                    <h3>@post.Title</h3>
                                    <p>@post.Description</p>
                                    <h5 class="d-tag">all about coffee</h5>
                                </div>
                            </a>
                            <img src="~/assets/images/@post.Photo" class="img-fluid" alt="">
                        </div>
                    </div>
                </div>
                    
                }

                <div class="clearfix" style="background-size: cover;"></div>
            </div>
        </div>
    </section>

</div>

<a asp-action="index" asp-controller="blog" id="back-to-top"></a>


